<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrarContactos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="267dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="80dp"
            android:text="Registrar contactos"
            android:layout_marginLeft="40dp"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/edtxtNombreC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Nombre:"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtxtTelefonoC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:ems="10"
            android:hint="Telefono:"
            android:inputType="phone" />


        <Button
            android:id="@+id/btnRegistrarContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Registrar" />

        <Button
            android:id="@+id/btnRegresarMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar al menu" />




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>